 periodically modulated\namplitudes.\n","versions":[{"version":"v1","created":"Thu, 30 Dec 2021 17:31:16 GMT"},{"version":"v2","created":"Thu, 28 Apr 2022 06:22:18 GMT"}],"update_date":"2022-05-02"}
