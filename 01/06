utation on adaptation.\n","versions":[{"version":"v1","created":"Wed, 6 Jan 2021 08:46:01 GMT"},{"version":"v2","created":"Thu, 10 Jun 2021 08:15:12 GMT"},{"version":"v3","created":"Tue, 9 Nov 2021 11:01:39 GMT"}],"update_date":"2021-11-10"}
