ethod is available at \\url{https://github.com/ebprado/CSP-BART}.\n","versions":[{"version":"v1","created":"Tue, 17 Aug 2021 13:58:44 GMT"},{"version":"v2","created":"Wed, 22 Sep 2021 15:34:26 GMT"},{"version":"v3","created":"Mon, 7 Feb 2022 18:24:00 GMT"},{"version":"v4","created":"Thu, 10 Feb 2022 17:45:09 GMT"},{"version":"v5","created":"Sat, 12 Feb 2022 19:55:33 GMT"},{"version":"v6","created":"Fri, 3 Jun 2022 23:32:32 GMT"}],"update_date":"2022-06-07"}
