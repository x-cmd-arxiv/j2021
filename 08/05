ure Circular Collider.\n","versions":[{"version":"v1","created":"Thu, 5 Aug 2021 05:31:29 GMT"},{"version":"v2","created":"Mon, 10 Jan 2022 09:49:23 GMT"}],"update_date":"2022-01-11"}
