y as\nelectromagnetic radiation.\n","versions":[{"version":"v1","created":"Thu, 26 Aug 2021 15:34:36 GMT"},{"version":"v2","created":"Fri, 4 Feb 2022 14:57:52 GMT"}],"update_date":"2022-02-16"}
