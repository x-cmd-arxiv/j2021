turning Circulation (AMOC).\n","versions":[{"version":"v1","created":"Tue, 15 Jun 2021 19:00:11 GMT"},{"version":"v2","created":"Tue, 21 Dec 2021 10:26:19 GMT"},{"version":"v3","created":"Tue, 15 Feb 2022 17:14:14 GMT"}],"update_date":"2022-04-06"}
