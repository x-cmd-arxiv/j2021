lated ice deformation.\n","versions":[{"version":"v1","created":"Tue, 11 May 2021 16:01:47 GMT"},{"version":"v2","created":"Tue, 2 Nov 2021 17:37:41 GMT"},{"version":"v3","created":"Mon, 14 Mar 2022 21:28:22 GMT"}],"update_date":"2022-07-13"}
