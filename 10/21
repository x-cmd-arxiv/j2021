 as quantum chromodynamics.\n","versions":[{"version":"v1","created":"Wed, 20 Oct 2021 19:17:21 GMT"},{"version":"v2","created":"Tue, 8 Feb 2022 19:55:40 GMT"},{"version":"v3","created":"Sun, 16 Oct 2022 23:03:55 GMT"}],"update_date":"2022-10-18"}
