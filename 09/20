/GhostShiftAddNet}.\n","versions":[{"version":"v1","created":"Mon, 20 Sep 2021 12:50:42 GMT"},{"version":"v2","created":"Fri, 29 Oct 2021 09:46:00 GMT"},{"version":"v3","created":"Thu, 3 Feb 2022 21:00:09 GMT"}],"update_date":"2022-02-07"}
