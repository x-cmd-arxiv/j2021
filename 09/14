r spherical integrals.\n","versions":[{"version":"v1","created":"Tue, 14 Sep 2021 12:02:32 GMT"},{"version":"v2","created":"Tue, 2 Nov 2021 11:56:43 GMT"},{"version":"v3","created":"Sat, 12 Feb 2022 21:24:18 GMT"},{"version":"v4","created":"Sat, 26 Feb 2022 11:36:29 GMT"}],"update_date":"2022-09-14"}
