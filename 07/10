f nonlinear harvesters.\n","versions":[{"version":"v1","created":"Fri, 9 Jul 2021 19:45:33 GMT"},{"version":"v2","created":"Thu, 26 May 2022 03:41:51 GMT"}],"update_date":"2022-05-27"}
