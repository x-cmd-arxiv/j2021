ar\nmomentum loss across the torus.\n","versions":[{"version":"v1","created":"Fri, 2 Apr 2021 17:05:27 GMT"},{"version":"v2","created":"Thu, 22 Jul 2021 20:34:06 GMT"},{"version":"v3","created":"Mon, 13 Dec 2021 20:26:27 GMT"}],"update_date":"2022-01-05"}
